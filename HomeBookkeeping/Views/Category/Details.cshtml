
@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-6 p-5" style="background-color: rgba(255, 255,255, 0.6);border-radius:10px; box-shadow: rgba(50, 50, 93, 0.25) 0px 6px 12px -2px, rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;">
        <dl class="row">
            <dt class="col-sm-4">Category Name:</dt>
            <dd class="col-sm-8">@Model.CategoryName</dd>

            <dt class="col-sm-4">Category:</dt>
            <dd class="col-sm-8">@Model.ExpenceIncomeType</dd>
        </dl>
        <div class="col d-flex justify-content-xxl-end">
            <a role="button" asp-action="Index" class="btn btn-secondary m-1">Back</a>
            <a role="button" asp-action="Update" asp-route-id="@Model.CategoryId" class="btn btn-warning m-1">Edit</a>
            <a role="button" asp-action="Index" class="btn btn-danger m-1">Delete</a>
        </div>
    </div>
</div>

<style>
    body {
        background-image: url(/images/ViewDetailsImage.jpg);
        background-repeat: no-repeat;
        background-color: #cccccc;
        background-size: cover;
        background-position: center;
    }
</style>